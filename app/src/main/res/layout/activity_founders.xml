<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoundersActivity">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="164dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/submitButton">


        <Button
            android:id="@+id/FormButton"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:background="#FFFF"
            android:onClick="openFormPage"
            android:text="form"
            android:textColor="@color/colorAccent"
            android:textColorHighlight="#FFFFFF" />

        <Button
            android:id="@+id/ProfileButton"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:background="#FFF"
            android:onClick="openProfilePage"
            android:text="profile"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/ListButton"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:background="#FFF"
            android:onClick="openListPage"
            android:text="List"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/FoundersButton"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:background="#FFF"
            android:onClick="openFoundersPage"
            android:text="Founders Page"
            android:textColor="@color/colorAccent"
            android:textSize="10sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/textView3"
        android:layout_width="344dp"
        android:layout_height="43dp"
        android:layout_marginBottom="104dp"
        android:text="About Us:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.141" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="237dp"
        android:layout_height="251dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.164"
        app:srcCompat="@drawable/menjaida" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="315dp"
        android:layout_height="34dp"
        android:text="Founder's Page"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />
</androidx.constraintlayout.widget.ConstraintLayout>